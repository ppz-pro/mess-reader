#mess-reader
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  margin: 0
  padding: 0
  
  display: flex
  align-items: center
  & > .left, & > .right
    width: 3rem
    height: 100%
    font-size: 2rem
    font-weight: 1000
    opacity: .2
    cursor: pointer
    display: flex
    align-items: center
    justify-content: center
    &:hover
      opacity: .6
  & > .left::after, & > .right::after
    display: block
    transform: scale(1, 2)
  & > .left::after
    content: '<'
  & > .right::after
    content: '>'

  & > .reader
    width: calc(100vw - 6rem)
    height: 100%