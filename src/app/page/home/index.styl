.home-page
  main
    padding-top: calc(100vh * .3)
    display: flex
    flex-direction: column
    align-items: center
    
    .item
      width: 30rem
      display: flex
      align-items: center
      margin-bottom: 1rem
      input[type=file]
        display: none
      input:not([type=file])
        flex: 1
        margin-left: 1rem
        height: 2rem
        padding: 0 .6rem
        font-size: 1rem
        outline: none
        border: 1px solid transparent
        transition: border .3s
        &:focus
          border-bottom: 1px solid #aaa
      button
        vertical-align: top
        height: 2rem
        cursor: pointer
        font-size: 1rem
        padding: 0
        outline: none
        border: none
        background: transparent
        color: rgb(52, 120, 243)
